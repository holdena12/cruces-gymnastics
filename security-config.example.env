# Security Configuration Example
# Copy this file to .env.local and update with your actual values

# Critical Security Settings
JWT_SECRET=your-super-secure-256-bit-random-string-change-this
ADMIN_EMAIL=admin@crucesgymnastics.com
ADMIN_PASSWORD=YourVerySecurePassword123!@#

# Database Security
DATABASE_ENCRYPTION_KEY=another-secure-random-key-for-encryption

# Application Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Session Security
SESSION_SECRET=session-secret-key-change-this
COOKIE_DOMAIN=localhost

# Security Headers
FORCE_HTTPS=false

# Audit Logging
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_LEVEL=info 