# DynamoDB Configuration
# Copy this file to .env.local and update with your actual values

# AWS Credentials (for DynamoDB access)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# DynamoDB Table Name
DYNAMODB_TABLE_NAME=cruces-gymnastics-data

# Security Settings
JWT_SECRET=your-super-secure-256-bit-random-string-change-this
ADMIN_EMAIL=admin@crucesgymnastics.com
ADMIN_PASSWORD=YourVerySecurePassword123!@#

# Application Environment
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-amplify-domain.amplifyapp.com

# Database Configuration
USE_DYNAMODB=true

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Session Security
SESSION_SECRET=session-secret-key-change-this
COOKIE_DOMAIN=your-amplify-domain.amplifyapp.com

# Security Headers
FORCE_HTTPS=true

# Audit Logging
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_LEVEL=info 